<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
       <thead>
        <tr>
          <th class = "box1"></th>
          <th class = "box2">Title</th>
          <th class = "box3">Opinin</th>
        </tr>
       </thead>
      </table>

      <table>
       <tbody>
         <% @books.each do |book| %>
          <tr>
           <td class = "data1">
            <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            <% end %>
           </td>
           <td class = "data2">
            <%= link_to book.title,book_path(book)%>
           </td>
           <td class = "data3">
            <%= book.body %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>