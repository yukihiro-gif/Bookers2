<div class = "container">
 <div class = "row">
 	<div class = "col-md-5 mx-auto">
 		<h2>Editing Book</h2>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>

 		<%= form_with model:@book, local:true do |f| %>
			<label>Title</label>
			<div class = "form_group">
			 <%= f.text_field :title %>
			</div>
			<label>Opinion</label>
			<div class = "form_group">
			 <%= f.text_area :body, size: "54✖70" %>
			</div>
			<div>
			<%= f.submit "Update Book"%>
			</div>
			<% end %>
            <%= link_to "Show",book_path %>
            |
            <%= link_to "Back",books_path %>



 	</div>
 </div>
</div>
